{% extends '@bolt/_partials/fields/_base.html.twig' %}

{% block field %}
    <input class="form-control {{ class }}" name="{{ name }}" placeholder="{{ placeholder }}"
           type="text" value="{{ value|join(", ") }}" {{ attributes|default()|raw }}
           {% if required == 1 %}required {% endif %}
           {% if readonly %}readonly {% endif %}
           {% if errormessage %}data-errormessage="{{ errormessage }}" {% endif %}
           {% if pattern %}pattern="{{ pattern }}" {% endif %}
           {% if placeholder %}placeholder="{{ placeholder }}" {% endif %}
    >
{% endblock %}
